cd ${PBS_O_WORKDIR}

# ファイルパスの設定

FASTQ='fastq'
N_THREADS='40'

# FASTQファイルのインポート
qiime tools import \
  --type 'SampleData[SequencesWithQuality]' \
  --input-path $FASTQ \
  --input-format CasavaOneEightSingleLanePerSampleDirFmt \
  --output-path demux.qza

qiime demux summarize \
--i-data demux.qza \
--o-visualization demux.qzv

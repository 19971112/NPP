#PBS -q small
#PBS -l ncpus=1
#PBS -V

cd ${PBS_O_WORKDIR}

FILEPATH=$1
N_THREADS='1'

# fastqファイルの結合

cat *.fastq > all.fastq


# アダプターのトリミング
porechop -i all.fastq -o all.porechop.fastq

# リードのstatisticsの取得
NanoStat --fastq all.porechop.fastq -t $N_THREADS

# Nanoplotでクオリティとリード長の分布
NanoPlot --fastq all.porechop.fastq --loglength -t $N_THREADS -o qc_result -f pdf

